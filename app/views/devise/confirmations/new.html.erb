<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <fieldset>
  	<legend>Resend confirmation instructions</legend>
  	<%= f.error_notification %>

    <%= f.input :email, :required => true %>

	<div class="form-actions">
	  <%= f.button :submit, "Resend confirmation instructions", :html => { :class => "btn btn-primary"} %>
	  <%= link_to "Back", :back, :class => "btn" %>
	</div>
  </fieldset>
<% end %>

<%= render "links" %>