<%= title "#{controller.action_name.capitalize} Course" %>
<%= simple_form_for @course, :html => { :class => 'form-horizontal'} do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize %> Course</legend>

      <%= f.input :name %>
      <%= f.input :description %>

  <%= render 'book_fields', :form => f %>
  
  <div class="form-actions">
  <%= f.submit nil, :class=>"btn btn-primary" %>
  <%= link_to "Cancel", courses_path, :class=>"btn" %>
  </div>
</fieldset>
<% end %>
