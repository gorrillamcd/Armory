<% sidebar true %>
<div class="row">
	<% case current_user.role %>
		<% when "admin" %>
			<div class="span12 content">
			You're an admin!
			</div>
		<% when "staff" %>
			<div class="span12 content">
				You're a staff person!
			</div>
