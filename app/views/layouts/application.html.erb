<!-- Body of Site -->

<!-- Main UI Navigation -->
<nav class="ui-nav">
  <div class="container">
    <ul>
      <li><i class="icon-list icon-white pull-left"></i><%= link_to "My Courses", "#" %></li>
      <li><%= link_to "Pickles", "#" %></li>
      <li><%= link_to "Notifications", "#" %></li>
    </ul>
  </div>
</nav>

<header>
  <div class="container">
    Que onda Bob!
  </div>
</header>

<div class="container">
  <div class="maincontent">
    <!-- Show notices if any -->
    <div class="row">
      <div class="span4 offset4">
        <% flash.each do |name, msg| %>
          <div id="flash_<%= name %>" class="alert alert-<%= name == :notice ? "success" : name %>">
            <%= msg %>
            <a class="close" data-dismiss="alert">x</a>
          </div>
        <% end %>
      </div>
    </div>
    <!-- END Notices Area -->

    <!-- Main Content Area -->
    <div class="row">
  			<%= yield %>
    </div>
    <!-- END Main Content Area -->
  </div>
</div>
</body>
</html>
